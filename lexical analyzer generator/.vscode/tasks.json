{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "main.cpp",
                "Dfa.cpp",
                "LexicalAnalyzer.cpp",
                "LexicalGeneratorBuilder.cpp",
                "Regex_to_nfa.cpp",
                "Nfa.cpp",
                "-o",
                "main.exe"
            ],
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./${workspaceFolderBasename}",
            "dependsOn": [
                "build"
            ],
            "problemMatcher": []
        }
    ]
}